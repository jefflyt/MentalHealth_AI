    <script>
        const chatContainer = document.getElementById('chat-container');
        const userInput = document.getElementById('user-input');
        const sendBtn = document.getElementById('send-btn');
        const crisisBanner = document.getElementById('crisis-banner');

        // Handle Enter key
        userInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                sendMessage();
            }
        });

        function formatTime(timestamp) {
            const date = new Date(timestamp);
            return date.toLocaleTimeString('en-US', { 
                hour: '2-digit', 
                minute: '2-digit' 
            });
        }

        function addMessage(content, role, timestamp, crisis = false) {
            // Remove welcome message if exists
            const welcomeMsg = chatContainer.querySelector('.welcome-message');
            if (welcomeMsg) {
                welcomeMsg.remove();
            }

            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${role}`;
            
            const bubble = document.createElement('div');
            bubble.className = 'message-bubble';
            bubble.textContent = content;
            
            messageDiv.appendChild(bubble);
            
            if (timestamp) {
                const time = document.createElement('div');
                time.className = 'timestamp';
                time.textContent = formatTime(timestamp);
                messageDiv.appendChild(time);
            }
            
            chatContainer.appendChild(messageDiv);
            
            // Show crisis banner if crisis detected
            if (crisis) {
                crisisBanner.classList.add('show');
            }
            
            // Scroll to bottom
            chatContainer.scrollTop = chatContainer.scrollHeight;
        }

        function showLoading() {
            const loadingDiv = document.createElement('div');
            loadingDiv.className = 'message agent';
            loadingDiv.id = 'loading-indicator';
            
            const bubble = document.createElement('div');
            bubble.className = 'message-bubble';
            
            const loading = document.createElement('div');
            loading.className = 'loading';
            loading.innerHTML = `
                <div class="loading-dot"></div>
                <div class="loading-dot"></div>
                <div class="loading-dot"></div>
            `;
            
            bubble.appendChild(loading);
            loadingDiv.appendChild(bubble);
            chatContainer.appendChild(loadingDiv);
            chatContainer.scrollTop = chatContainer.scrollHeight;
        }

        function hideLoading() {
            const loading = document.getElementById('loading-indicator');
            if (loading) {
                loading.remove();
            }
        }

        async function sendMessage() {
            const message = userInput.value.trim();
            
            if (!message) return;
            
            // Add user message
            addMessage(message, 'user', new Date().toISOString());
            
            // Clear input
            userInput.value = '';
            
            // Disable input and button
            userInput.disabled = true;
            sendBtn.disabled = true;
            
            // Show loading
            showLoading();
            
            try {
                const response = await fetch('/chat', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ message: message })
                });
                
                const data = await response.json();
                
                hideLoading();
                
                if (data.error) {
                    addMessage(data.response || 'An error occurred', 'agent', data.timestamp);
                } else {
                    addMessage(data.response, 'agent', data.timestamp, data.crisis);
                }
                
            } catch (error) {
                hideLoading();
                addMessage('Sorry, I encountered an error. Please try again.', 'agent', new Date().toISOString());
                console.error('Error:', error);
            } finally {
                // Re-enable input and button
                userInput.disabled = false;
                sendBtn.disabled = false;
                userInput.focus();
            }
        }

        async function startNewConversation() {
            if (!confirm('Start a new conversation? Current chat will be cleared.')) {
                return;
            }
            
            try {
                await fetch('/new-conversation', {
                    method: 'POST'
                });
                
                // Clear assessment results from session
                sessionAssessmentResults = {};
                
                // Clear chat
                chatContainer.innerHTML = `
                    <div class="welcome-message">
                        <h2>Hey there! I'm Sunny üòä</h2>
                        <p>
                            I'm your caring digital friend here to support you with mental health information, 
                            Singapore resources, and a listening ear. Feel free to chat with me about anxiety, 
                            depression, stress management, or where to find help - I'm here for you!
                        </p>
                        <p style="margin-top: 20px; font-size: 13px; color: #9ca3af;">
                            üí° You can ask me about mental health topics, coping strategies, or local services
                        </p>
                    </div>
                `;
                
                // Hide crisis banner
                crisisBanner.classList.remove('show');
                
                // Update assessment context indicator
                updateAssessmentContextIndicator();
                
            } catch (error) {
                console.error('Error starting new conversation:', error);
            }
        }

        // Focus input on load
        window.addEventListener('load', () => {
            userInput.focus();
        });

        function toggleResources() {
            const section = document.getElementById('resources-section');
            const icon = document.getElementById('toggle-icon');
            
            section.classList.toggle('expanded');
            icon.classList.toggle('expanded');
        }

        // Tab switching functionality
        function switchTab(tabName) {
            // Hide all tabs
            const tabs = document.querySelectorAll('.tab-content');
            tabs.forEach(tab => tab.classList.remove('active'));
            
            // Remove active class from all nav tabs
            const navTabs = document.querySelectorAll('.nav-tab');
            navTabs.forEach(tab => tab.classList.remove('active'));
            
            // Show selected tab
            document.getElementById(tabName + '-tab').classList.add('active');
            
            // Add active class to clicked nav tab
            event.target.classList.add('active');
        }

        // Assessment state variables
        let currentAssessment = null;
        let currentQuestionIndex = 0;
        let assessmentAnswers = [];
        let assessmentData = {};
        let sessionAssessmentResults = {}; // Store results for the session

        // DASS-21 Questions (7 for each category: Depression, Anxiety, Stress)
        const DASS21_QUESTIONS = {
            title: "DASS-21 Assessment",
            description: "Please read each statement and select how much it applied to you over the past week. There are no right or wrong answers.",
            questions: [
                // Depression items (items 3, 5, 10, 13, 16, 17, 21)
                { text: "I couldn't seem to experience any positive feeling at all", category: "depression" },
                { text: "I found it difficult to work up the initiative to do things", category: "depression" },
                { text: "I felt that I had nothing to look forward to", category: "depression" },
                { text: "I felt down-hearted and blue", category: "depression" },
                { text: "I was unable to become enthusiastic about anything", category: "depression" },
                { text: "I felt I wasn't worth much as a person", category: "depression" },
                { text: "I felt that life was meaningless", category: "depression" },
                
                // Anxiety items (items 2, 4, 7, 9, 15, 19, 20)
                { text: "I was aware of dryness of my mouth", category: "anxiety" },
                { text: "I experienced breathing difficulty (e.g., excessively rapid breathing, breathlessness)", category: "anxiety" },
                { text: "I experienced trembling (e.g., in the hands)", category: "anxiety" },
                { text: "I was worried about situations in which I might panic and make a fool of myself", category: "anxiety" },
                { text: "I felt I was close to panic", category: "anxiety" },
                { text: "I was aware of the action of my heart in the absence of physical exertion", category: "anxiety" },
                { text: "I felt scared without any good reason", category: "anxiety" },
                
                // Stress items (items 1, 6, 8, 11, 12, 14, 18)
                { text: "I found it hard to wind down", category: "stress" },
                { text: "I tended to over-react to situations", category: "stress" },
                { text: "I felt that I was using a lot of nervous energy", category: "stress" },
                { text: "I found myself getting agitated", category: "stress" },
                { text: "I found it difficult to relax", category: "stress" },
                { text: "I was intolerant of anything that kept me from getting on with what I was doing", category: "stress" },
                { text: "I felt that I was rather touchy", category: "stress" }
            ],
            scale: [
                { value: 0, label: "Never" },
                { value: 1, label: "Sometimes" },
                { value: 2, label: "Often" },
                { value: 3, label: "Almost Always" }
            ]
        };

        const MOOD_CHECK_QUESTIONS = {
            title: "Quick Mood Check",
            description: "A gentle check-in with your current emotional state.",
            questions: [
                { text: "How would you rate your overall mood today?", category: "mood", scale: "mood" },
                { text: "How is your energy level right now?", category: "energy", scale: "energy" },
                { text: "How well did you sleep last night?", category: "sleep", scale: "quality" },
                { text: "How stressed do you feel today?", category: "stress", scale: "stress" },
                { text: "How hopeful do you feel about the future?", category: "hope", scale: "agreement" }
            ],
            scales: {
                mood: [
                    { value: 1, label: "Very Low" },
                    { value: 2, label: "Low" },
                    { value: 3, label: "Okay" },
                    { value: 4, label: "Good" },
                    { value: 5, label: "Great" }
                ],
                energy: [
                    { value: 1, label: "Exhausted" },
                    { value: 2, label: "Tired" },
                    { value: 3, label: "Moderate" },
                    { value: 4, label: "Energetic" },
                    { value: 5, label: "Very High" }
                ],
                quality: [
                    { value: 1, label: "Very Poor" },
                    { value: 2, label: "Poor" },
                    { value: 3, label: "Fair" },
                    { value: 4, label: "Good" },
                    { value: 5, label: "Excellent" }
                ],
                stress: [
                    { value: 1, label: "Very Low" },
                    { value: 2, label: "Low" },
                    { value: 3, label: "Moderate" },
                    { value: 4, label: "High" },
                    { value: 5, label: "Very High" }
                ],
                agreement: [
                    { value: 1, label: "Not at all" },
                    { value: 2, label: "A little" },
                    { value: 3, label: "Somewhat" },
                    { value: 4, label: "Quite a bit" },
                    { value: 5, label: "Very much" }
                ]
            }
        };

        // Assessment functions
        function startAssessment(type) {
            currentAssessment = type;
            currentQuestionIndex = 0;
            assessmentAnswers = [];
            
            // Set assessment data
            switch(type) {
                case 'dass21':
                    assessmentData = DASS21_QUESTIONS;
                    break;
                case 'mood':
                    assessmentData = MOOD_CHECK_QUESTIONS;
                    break;
                case 'stress':
                    assessmentData = {
                        title: "Stress Level Check",
                        description: "Understanding your current stress levels and coping strategies.",
                        questions: [
                            { text: "How overwhelmed do you feel by your daily responsibilities?", category: "overwhelm" },
                            { text: "How often do you feel unable to cope with stress?", category: "coping" },
                            { text: "How much do you worry about things you cannot control?", category: "worry" },
                            { text: "How often do you feel physically tense or wound up?", category: "tension" },
                            { text: "How well are you managing work-life balance?", category: "balance" }
                        ],
                        scale: [
                            { value: 0, label: "Never" },
                            { value: 1, label: "Rarely" },
                            { value: 2, label: "Sometimes" },
                            { value: 3, label: "Often" },
                            { value: 4, label: "Always" }
                        ]
                    };
                    break;
            }

            // Initialize answers array
            assessmentAnswers = new Array(assessmentData.questions.length).fill(null);
            
            // Show questions screen
            showScreen('assessment-questions');
            
            // Set title and description
            document.getElementById('assessment-title').textContent = assessmentData.title;
            document.getElementById('assessment-description').textContent = assessmentData.description;
            
            // Show first question
            showQuestion(0);
        }

        function showScreen(screenId) {
            // Hide all screens
            const screens = document.querySelectorAll('.assessment-screen');
            screens.forEach(screen => screen.style.display = 'none');
            
            // Show selected screen
            document.getElementById(screenId).style.display = 'block';
        }

        function showQuestion(index) {
            currentQuestionIndex = index;
            const question = assessmentData.questions[index];
            const questionCard = document.getElementById('current-question');
            
            // Update progress
            const progress = ((index) / assessmentData.questions.length) * 100;
            document.getElementById('progress-bar').style.width = progress + '%';
            document.getElementById('progress-text').textContent = `Question ${index + 1} of ${assessmentData.questions.length}`;
            
            // Get scale for this question
            let scale = assessmentData.scale;
            if (assessmentData.scales && question.scale) {
                scale = assessmentData.scales[question.scale];
            }
            
            // Build question HTML
            let optionsHTML = '';
            scale.forEach((option, optionIndex) => {
                const isSelected = assessmentAnswers[index] === option.value ? 'selected' : '';
                optionsHTML += `
                    <div class="rating-option ${isSelected}" onclick="selectAnswer(${index}, ${option.value})">
                        ${option.label}
                    </div>
                `;
            });

            questionCard.innerHTML = `
                <div class="question-number">${index + 1}</div>
                <div class="question-text">${question.text}</div>
                <div class="rating-options">
                    ${optionsHTML}
                </div>
            `;

            // Update question card style if answered
            if (assessmentAnswers[index] !== null) {
                questionCard.classList.add('answered');
            } else {
                questionCard.classList.remove('answered');
            }
            
            // Update button visibility
            updateNavigationButtons();
        }

        function selectAnswer(questionIndex, value) {
            assessmentAnswers[questionIndex] = value;
            
            // Update UI
            const options = document.querySelectorAll('.rating-option');
            options.forEach(option => option.classList.remove('selected'));
            event.target.classList.add('selected');
            
            // Mark question as answered
            document.getElementById('current-question').classList.add('answered');
            
            // Update navigation buttons
            updateNavigationButtons();
        }

        function updateNavigationButtons() {
            const prevBtn = document.getElementById('prev-btn');
            const nextBtn = document.getElementById('next-btn');
            const submitBtn = document.getElementById('submit-assessment-btn');
            
            // Show/hide previous button
            prevBtn.style.display = currentQuestionIndex > 0 ? 'block' : 'none';
            
            // Show/hide next button vs submit button
            if (currentQuestionIndex === assessmentData.questions.length - 1) {
                nextBtn.style.display = 'none';
                submitBtn.style.display = 'block';
                submitBtn.disabled = assessmentAnswers[currentQuestionIndex] === null;
            } else {
                nextBtn.style.display = 'block';
                submitBtn.style.display = 'none';
                nextBtn.disabled = assessmentAnswers[currentQuestionIndex] === null;
            }
        }

        function nextQuestion() {
            if (currentQuestionIndex < assessmentData.questions.length - 1) {
                showQuestion(currentQuestionIndex + 1);
            }
        }

        function previousQuestion() {
            if (currentQuestionIndex > 0) {
                showQuestion(currentQuestionIndex - 1);
            }
        }

        async function submitAssessment() {
            // Calculate results based on assessment type
            let results = {};
            
            if (currentAssessment === 'dass21') {
                results = calculateDASS21Results();
            } else if (currentAssessment === 'mood') {
                results = calculateMoodResults();
            } else if (currentAssessment === 'stress') {
                results = calculateStressResults();
            }
            
            // Store results in session storage for this session
            sessionAssessmentResults = {
                ...results,
                timestamp: new Date().toISOString(),
                assessmentType: currentAssessment
            };
            
            // Send results to backend for Sunny's context
            try {
                await fetch('/store-assessment-results', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(sessionAssessmentResults)
                });
                console.log('Assessment results stored for Sunny\'s context');
            } catch (error) {
                console.error('Error storing assessment results:', error);
            }
            
            // Show results
            showAssessmentResults(results);
        }

        function calculateDASS21Results() {
            const scores = { depression: 0, anxiety: 0, stress: 0 };
            
            // Calculate scores for each category
            assessmentData.questions.forEach((question, index) => {
                scores[question.category] += assessmentAnswers[index] || 0;
            });
            
            // Multiply by 2 (DASS-21 scoring)
            Object.keys(scores).forEach(key => {
                scores[key] *= 2;
            });
            
            // Determine severity levels
            const getLevel = (score, type) => {
                const ranges = {
                    depression: { normal: [0, 9], mild: [10, 13], moderate: [14, 20], severe: [21, 27], extremely_severe: [28, 42] },
                    anxiety: { normal: [0, 7], mild: [8, 9], moderate: [10, 14], severe: [15, 19], extremely_severe: [20, 42] },
                    stress: { normal: [0, 14], mild: [15, 18], moderate: [19, 25], severe: [26, 33], extremely_severe: [34, 42] }
                };
                
                const range = ranges[type];
                if (score <= range.normal[1]) return 'normal';
                if (score <= range.mild[1]) return 'mild';
                if (score <= range.moderate[1]) return 'moderate';
                if (score <= range.severe[1]) return 'severe';
                return 'extremely_severe';
            };
            
            return {
                type: 'dass21',
                scores: {
                    depression: { score: scores.depression, level: getLevel(scores.depression, 'depression') },
                    anxiety: { score: scores.anxiety, level: getLevel(scores.anxiety, 'anxiety') },
                    stress: { score: scores.stress, level: getLevel(scores.stress, 'stress') }
                }
            };
        }

        function calculateMoodResults() {
            const totalScore = assessmentAnswers.reduce((sum, answer) => sum + (answer || 0), 0);
            const averageScore = totalScore / assessmentAnswers.length;
            
            let interpretation = '';
            if (averageScore >= 4) {
                interpretation = "You're doing great! Your mood and energy levels seem positive today.";
            } else if (averageScore >= 3) {
                interpretation = "You're managing okay, but there might be some areas to focus on for better wellbeing.";
            } else {
                interpretation = "It seems like you might be going through a tough time. Consider reaching out for support.";
            }
            
            return {
                type: 'mood',
                averageScore: averageScore.toFixed(1),
                interpretation: interpretation
            };
        }

        function calculateStressResults() {
            const totalScore = assessmentAnswers.reduce((sum, answer) => sum + (answer || 0), 0);
            const maxScore = assessmentData.questions.length * 4;
            const percentage = (totalScore / maxScore) * 100;
            
            let level = '';
            let interpretation = '';
            
            if (percentage <= 30) {
                level = 'Low';
                interpretation = "Your stress levels appear to be manageable. Keep up your current coping strategies!";
            } else if (percentage <= 60) {
                level = 'Moderate';
                interpretation = "You're experiencing moderate stress. Consider incorporating more stress-reduction techniques into your routine.";
            } else {
                level = 'High';
                interpretation = "Your stress levels are quite high. It would be beneficial to explore stress management strategies and consider professional support.";
            }
            
            return {
                type: 'stress',
                score: totalScore,
                percentage: percentage.toFixed(0),
                level: level,
                interpretation: interpretation
            };
        }

        function showAssessmentResults(results) {
            const resultsContent = document.getElementById('results-content');
            const interpretationText = document.getElementById('interpretation-text');
            
            let html = '';
            let interpretation = '';
            
            if (results.type === 'dass21') {
                html = `
                    <div class="score-card">
                        <div class="score-category">
                            <span class="score-label">Depression</span>
                            <div>
                                <span class="score-value">${results.scores.depression.score}</span>
                                <span class="score-level level-${results.scores.depression.level}">${results.scores.depression.level}</span>
                            </div>
                        </div>
                        <div class="score-category">
                            <span class="score-label">Anxiety</span>
                            <div>
                                <span class="score-value">${results.scores.anxiety.score}</span>
                                <span class="score-level level-${results.scores.anxiety.level}">${results.scores.anxiety.level}</span>
                            </div>
                        </div>
                        <div class="score-category">
                            <span class="score-label">Stress</span>
                            <div>
                                <span class="score-value">${results.scores.stress.score}</span>
                                <span class="score-level level-${results.scores.stress.level}">${results.scores.stress.level}</span>
                            </div>
                        </div>
                    </div>
                `;
                
                interpretation = "These scores give us insight into how you've been feeling lately. Remember, everyone experiences ups and downs, and seeking support is a sign of strength, not weakness.";
                
            } else if (results.type === 'mood') {
                html = `
                    <div class="score-card">
                        <div class="score-category">
                            <span class="score-label">Overall Mood Score</span>
                            <span class="score-value">${results.averageScore}/5.0</span>
                        </div>
                    </div>
                `;
                interpretation = results.interpretation;
                
            } else if (results.type === 'stress') {
                html = `
                    <div class="score-card">
                        <div class="score-category">
                            <span class="score-label">Stress Level</span>
                            <div>
                                <span class="score-value">${results.percentage}%</span>
                                <span class="score-level level-${results.level.toLowerCase()}">${results.level}</span>
                            </div>
                        </div>
                    </div>
                `;
                interpretation = results.interpretation;
            }
            
            resultsContent.innerHTML = html;
            interpretationText.textContent = interpretation;
            
            // Show results screen
            showScreen('assessment-results');
            
            // Update assessment context indicator in chat
            updateAssessmentContextIndicator();
        }

        function chatAboutResults() {
            switchTab('chat');
            setTimeout(() => {
                let message = "I just completed a self-assessment and would like to talk about the results.";
                
                // Add specific context about the assessment taken
                if (sessionAssessmentResults.assessmentType) {
                    if (sessionAssessmentResults.assessmentType === 'dass21') {
                        message = "I just completed the DASS-21 assessment and would like to discuss my results with you.";
                    } else if (sessionAssessmentResults.assessmentType === 'mood') {
                        message = "I just did a mood check and would like to talk about how I'm feeling.";
                    } else if (sessionAssessmentResults.assessmentType === 'stress') {
                        message = "I just completed a stress level assessment and would like to discuss my stress levels.";
                    }
                }
                
                document.getElementById('user-input').value = message;
                sendMessage();
            }, 500);
        }

        function getResources() {
            switchTab('resources');
        }

        function retakeAssessment() {
            showScreen('assessment-selection');
        }

        function updateAssessmentContextIndicator() {
            const indicator = document.getElementById('assessment-context-indicator');
            const text = document.getElementById('assessment-context-text');
            
            if (sessionAssessmentResults && sessionAssessmentResults.assessmentType) {
                const assessmentType = sessionAssessmentResults.assessmentType;
                let contextText = '';
                
                if (assessmentType === 'dass21') {
                    contextText = 'üß† DASS-21 results available - Sunny can provide personalized mental health support';
                } else if (assessmentType === 'mood') {
                    contextText = 'üòä Mood check results available - Sunny understands your current emotional state';
                } else if (assessmentType === 'stress') {
                    contextText = 'üå™Ô∏è Stress assessment results available - Sunny can help with stress management';
                }
                
                text.textContent = contextText;
                indicator.classList.add('show');
            } else {
                indicator.classList.remove('show');
            }
        }

        // Tool functions
        function openTool(toolName) {
            switch(toolName) {
                case 'breathing':
                    alert('ü´Å Opening breathing exercises...\n\nTry this: Inhale for 4 counts, hold for 4, exhale for 4.\n\n(This would open a guided breathing interface)');
                    break;
                case 'gratitude':
                    alert('üôè Opening gratitude journal...\n\nWhat are 3 things you\'re grateful for today?\n\n(This would open a journaling interface)');
                    break;
                case 'mood':
                    alert('üìà Opening mood tracker...\n\nHow are you feeling right now on a scale of 1-10?\n\n(This would open a mood tracking interface)');
                    break;
                case 'affirmations':
                    alert('üí™ Opening positive affirmations...\n\n"I am worthy of love and care. I am doing my best each day."\n\n(This would show daily affirmations)');
                    break;
            }
        }
    </script>
