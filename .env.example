# AI Mental Health Support Agent - Environment Variables
# Copy this file to .env and fill in your actual values

# Required: HuggingFace API Token for remote embeddings
# Get your token at: https://huggingface.co/settings/tokens
HUGGINGFACE_API_TOKEN=hf_your_token_here

# Required: Groq API Key for LLM (llama-3.3-70b-versatile)
# Get your key at: https://console.groq.com/keys
GROQ_API_KEY=gsk_your_key_here

# Required: Flask Secret Key for session management
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your_secret_key_here

# Optional: Reranker (DISABLED by default - DO NOT enable on Render free tier)
# Enabling this will download torch and sentence-transformers (2GB+ RAM)
RERANKER_ENABLED=false

# Optional: Safety flags (automatically set in code, but can override)
TOKENIZERS_PARALLELISM=false
CHROMA_DISABLE_TELEMETRY=true

# Optional: Reranker configuration (only if RERANKER_ENABLED=true)
# RERANKER_MODEL=cross-encoder/ms-marco-TinyBERT-L-2-v2
# RERANKER_THRESHOLD=0.0
# RERANKER_TOP_K=

# Optional: Server configuration
# PORT=5001  # Render will set this automatically
